#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n,h,x;
    cin>>n>>h>>x;
    int a[n];
    int max=0;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int r=(h-x);
    for(int i=0;i<n;i++)
    {
        if(max<a[i])
        max=a[i];
    }
    if(max>=r)
    cout<<"YES"<<endl;
    else cout<<"NO"<<endl;
    return 0;
}
